@model CECBTIMS.Models.DefaultColumn

@{
    ViewBag.Title = "Create - Default Column";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8 mx-auto mb-lg-5">
    <div class="card border-primary mb-3">
        <div class="card-header">
            <div class="float-left">
                <h5>Select Default Columns</h5>
            </div>
            <div class="float-right">
                @Html.ActionLink("Back to List", "Index",new {templateId = ViewBag.TemplateId}, new {@class = "btn btn-secondary"})
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})



                <div class="form-group">
                    @Html.LabelFor(model => model.ColumnName, "Column Name", htmlAttributes: new {@class = "control-label"})
                    <div class="form-group">
                        <select class="custom-select" name="ColumnName">
                            <option value="No">No</option>
                            <option value="Name">Name</option>
                            <option value="Designation">designation</option>
                            <option value="Nature of Appointment">nature of appointment</option>
                            <option value="Recommendation">Recommendation (section)</option>
                            <option value="Name, Designation and Grade">Name, Designation and Grade</option>
                            <option value="Date of Joined">Date of Joined</option>
                            <option value="Date of Appointment">date of appointment</option>
                            <option value="Experience in CECB">experience in CECB</option>
                            <option value="Recommendation">Recommendation</option>
                            <option value="Member / Non member">Member / Non-Member</option>
                            <option value="Remarks">Remarks</option>
                            <option value="Name,Designation and Grade">Name,Designation and Grade</option>
                            <option value="Remarks on Relevancy to the Program">Remarks on Relevancy to the Program</option>
                            <option value="Details of Foreign Trainings participated">Details of Foreign Trainings participated</option>
                            <option value="Details of Foreign Visits Participated">Details of Foreign Visits Participated</option>
                            <option value="Email">Email</option>
                            <option value="Contact No">Contact No</option>
                            <option value="Passport No">Passport No.</option>
                            <option value="Date of Service Confirmation">Date of service confirmation</option>
                            <option value="Incidental Allowance">Incidental Allowance</option>
                            <option value="Warm Cloth Allowance">Warm Cloth Allowance</option>

                        </select>
                    </div>
                    
                    
                    @* no *@
                    @* name *@
                    @* designation *@
                    @* nature of appointment *@
                    @* recommendation (section) *@
                    @* name, designation and grade *@
                    @* date of joined *@
                    @* date of appointment *@
                    @* experience in CECB *@
                    @* recommendation *@
                    @* member / non member *@
                    @* remarks  *@
                    @* name,designation and grade *@
                    @* remarks on relevancy to the program *@
                    @* details of foreign trainining participated *@
                    @* details of foregin visists participated *@
                    @* Email *@
                    @* Contact No *@
                    @* Passport No. *@
                    @* Date of service confirmation *@
                    @* Incidental allowance *@
                    @* Warm cloth allowance *@




                </div>
                <input type="hidden" name="TemplateId" value="@(ViewBag.TemplateId)"/>

                <div class="form-group float-right">
                    <input type="submit" value="Select" class="btn btn-primary"/>
                </div>
            }
        </div>
    </div>
</div>