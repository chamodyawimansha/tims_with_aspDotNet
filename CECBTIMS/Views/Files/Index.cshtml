@model IEnumerable<CECBTIMS.Models.TimsFile>

@{
    ViewBag.Title = "Intex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 mx-auto mb-lg-5">
    <div class="card border-primary mb-3">
        <div class="card-header">
            File Manager
            
            upload a template
        </div>
        <div class="card-body">
            <div class="container">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th  style="width: 20%">Title</th>
                        <th style="width: 20%">Original File Name</th>
                        <th>Type</th>
                        <th>Created Method</th>
                        <th>Created On</th>
                        <th>Created By</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                               
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OriginalFileName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileMethod)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedBy)
                            </td>
                            <td>
                                <a href="@Url.Action($"Download", $"Files", new {id = item.Id})" class="text-primary mr-sm-2">
                                    <span class="fa fa-download" aria-hidden="true"></span>
                                </a>
                                <a href="@Url.Action($"Delete", $"Files", new {id = item.Id})" class="text-danger">
                                    <span class="fa fa-trash " aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>