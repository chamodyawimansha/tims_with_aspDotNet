@model CECBTIMS.Models.TimsFile

@{
    ViewBag.Title = "Edit File";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-8 mx-auto mb-lg-5">
    <div class="card border-primary mb-3">
        <div class="card-header">Edit File Details & Re-upload</div>
        <div class="card-body">
            <div class="container pt-4 pb-4">
                @using (Html.BeginForm($"Edit", $"Files", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.RowVersion)
                    @Html.HiddenFor(model => model.Id)
                    <input type="hidden" name="programId" value="@(ViewBag.ProgramId)" />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="currentFile">Current File Name</label>
                        <input type="text" value="@(Model.OriginalFileName)" class="form-control" readonly="readonly"/>
                    </div>

                    <div class="form-group">
                        <label for="FileInput">Select a File</label>
                        <input type="file" class="form-control-file" id="FileInput" name="file" aria-describedby="fileHelp">
                        <small id="fileHelp" class="form-text text-muted">Only Pdf, Docx, Doc, PNG, JPG and JPEG are allowed</small>
                        <small id="fileHelp" class="form-text text-muted">If you Don't want re-upload, leave this field empty.</small>
                    </div>
                    
                    <div class="form-group float-right">
                        clear selected file
                        Back link
                        <input type="submit" value="Upload" class="btn btn-primary"/>
                    </div>
                }

                @ViewBag.Message
            </div>
        </div>
    </div>
</div>
