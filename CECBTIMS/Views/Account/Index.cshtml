@using Microsoft.Ajax.Utilities
@model IEnumerable<CECBTIMS.Models.ApplicationUser>

@{
    ViewBag.Title = "User Accounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-9 mx-auto mb-lg-5">
    <div class="card border-primary mb-3">
        <div class="card-header">
            <div class="float-left">
                <h5>User Account Manager</h5>
            </div>
            <div class="float-right">
                @if (User.IsInRole("Administrator"))
                {
                    @Html.ActionLink("New User", $"Create", null, new {@class = "btn btn-secondary"})
                }
            </div>
        </div>
        <div class="card-body">

            @Html.Partial($"~/Views/Shared/_Alerts.cshtml")

            <table class="table table-bordered">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td>
                            @Html.ActionLink("Edit Password", $"Edit", new {id = item.Id}, new {@class = "btn btn-secondary"})

                            edit
                            remove
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>