@model CECBTIMS.ViewModels.DeleteViewModel

@{
    ViewBag.Title = "User Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-8 mx-auto mb-lg-5">
    <div class="card border-primary mb-3">
        <div class="card-header">
            <div class="float-left">
                <h5>Delete User</h5>
            </div>
            <div class="float-right">
                @Html.ActionLink("Back", $"Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
        <div class="card-body">
            @Html.Partial($"~/Views/Shared/_Alerts.cshtml")
            <h5 class="mb-2">Your are about to delete the following user. this can't be undone.</h5>

            <table class="table table-bordered">
                <tr>
                    <th class="w-25">Username</th>
                    <td class="w-75">@Model.Username</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
            </table>
            @using (Html.BeginForm($"Delete", $"Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group float-right">
                    <input type="submit" class="btn btn-danger" value="Delete" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}