@model CECBTIMS.Models.Organizer

@{
    ViewBag.Title = "Delete";
}


<div class="col-9 mx-auto mb-1">
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="float-left">
                Delete Confirmation
            </h5>
            <div class="float-right">
                @Html.ActionLink("Back", $"Index", null, new {@class = "btn btn-outline-secondary"})
            </div>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <table class="table table-bordered">
                <tr>
                    <th class="w-25">Name</th>
                    <td class="w-75">@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <th>Created At</th>
                    <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                </tr>
                <tr>
                    <th>Created By</th>
                    <td>@Html.DisplayFor(model => model.CreatedBy)</td>
                </tr>
                <tr>
                    <th>Updated At</th>
                    <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
                </tr>
                <tr>
                    <th>Updated By</th>
                    <td>@Html.DisplayFor(model => model.UpdatedBy)</td>
                </tr>
            </table>
            @if (!Model.Programs.Any())
            {
                <div class="float-right">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@Model.Id" name="id"/>
                        <input type="submit" name="submit" value="Delete Confirm" class="btn btn-danger"/>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4 class="alert-heading">Warning!</h4>
                    <p class="mb-0">The selected Organiser has @(Model.Programs.Count) Training Program. Remove them from the organiser In-order to Delete seleted Organiser</p>
                </div>
            }
            
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})


        </div>
    </div>
</div>