@model CECBTIMS.Models.Template

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-10 mx-auto mb-lg-5">
    <div class="card border-primary mb-3">
        <div class="card-header">
            <div class="float-left">
                <h5>Template Detailed View</h5>
            </div>
            <div class="float-right">
                @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-secondary"})
                @Html.ActionLink("Edit", "Edit", new {id = Model.Id}, new {@class = "btn btn-warning"})
            </div>
        </div>

        <div class="card-body">


            <table class="table table-bordered">
                <tr>
                    <th style="width: 15%">Title</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.Title)</td>
                    <th style="width: 15%">Details</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.Details)</td>
                </tr>
                <tr>
                    <th style="width: 15%">File Name</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.FileName)</td>
                    <th style="width: 15%">Program Type</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.ProgramType)</td>
                </tr>
                <tr>
                    <th style="width: 15%">File Type</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.FileType)</td>
                    <th style="width: 15%">Program Method</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.FileMethod)</td>
                </tr>
                <tr>
                    <th style="width: 15%">Original File Name</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.OriginalFileName)</td>
                    <th style="width: 15%">Has Configurable Table</th>
                    <td style="width: 35%">
                        @Html.DisplayFor(model => model.HasConfigurableTable)

                        @if (Model.HasConfigurableTable)
                        {
                            if (Model.DefaultColumns.Count > 0)
                            {
                                
                                @Html.ActionLink("View Default Columns", "Index", "DefaultColumns", new { templateId = Model.Id}, new {@class = "btn btn-link"})
                            }
                            else
                            {
                                @Html.ActionLink("Add Default Columns", "Create", "DefaultColumns", new { templateId = Model.Id}, new {@class = "btn btn-link"})
                            }
                        }
                        
                    </td>
                </tr>
                <tr>
                    <th style="width: 15%">Created At</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.CreatedAt)</td>
                    <th style="width: 15%">Updated At</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.UpdatedAt)</td>
                </tr>
                <tr>
                    <th style="width: 15%">Created By</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.CreatedByApplicationUserId)</td>
                    <th style="width: 15%">Updated By</th>
                    <td style="width: 35%">@Html.DisplayFor(model => model.UpdatedBy)</td>
                </tr>
            </table>
        </div>
    </div>
</div>