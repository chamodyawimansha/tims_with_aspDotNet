@model CECBTIMS.Models.Document

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-9 mx-auto mb-1">
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="float-left">
                Delete Confirmation
            </h5>
            <div class="float-right">
                @Html.ActionLink("Back", $"Index", null, new {@class = "btn btn-outline-secondary"})
            </div>
        </div>
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <table class="table table-bordered">
                <tr>
                    <th class="w-25">Document Title</th>
                    <td class="w-75">@Html.DisplayFor(model => model.Title)</td>
                </tr>
                <tr>
                    <th class="w-25">Document Details</th>
                    <td class="w-75">@Html.DisplayFor(model => model.Details)</td>
                </tr>
            </table>
            <div class="float-right">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@Model.Id" name="id"/>
                    <input type="submit" name="submit" value="Delete" class="btn btn-danger"/>
                }
            </div>
        </div>
    </div>
</div>